<!-- .tp-counter-area start -->
<div class="tp-counter-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="tp-counter-grids">
                      @if (Model.Donations != null){
                        int totalDonations = Model.Donations.Count(); // Get the total number of donations
                    <div class="grid">
                        <div>
                            <h2><span class="odometer" data-count="@totalDonations">00</span>+</h2>
                        </div>
                        <p>Donation</p>
                    </div>
                    }   
                    @if (Model.Donations != null){
                            decimal totalDonationAmount =   Model.Donations.Sum(d => d.DAmount ?? 0); // Get the total donation amount
                    <div class="grid">
                        <div>
                            <h2>$<span class="odometer" data-count="@totalDonationAmount">00</span>+</h2>
                        </div>
                        <p>Fund Raised</p>
                    </div>
                     }
                   @if (Model.Ngovolunteers != null){
                       int totalVolunteer = Model.Ngovolunteers.Count(); // Get the total donation amount
                     <div class="grid">
                        <div>
                            <h2><span class="odometer" data-count="@totalVolunteer">00</span>+</h2>
                        </div>
                        <p>Volunteers</p>
                    </div>
                   }
                    @if (Model.Cause != null)
                    {
                        int totalS = Model.Cause.Count();
                        <div class="grid">
                            <div>
                                <h2><span class="odometer" data-count="@totalS">00</span>+</h2>
                            </div>
                            <p>Projects</p>
                        </div>
                    }

                   
                </div>
            </div>
        </div>
    </div>
</div>
<!-- .tp-counter-area end -->
