                </div>
            </div><!-- end of container -->
        </nav>
    </header>
    <!-- end of header -->
<!-- start page-title -->
<section class="page-title">
    <div class="page-title-container">
        <div class="page-title-wrapper">
            <div class="container" style="margin-top: 10px;">
                <div class="row">
                    <div class="col col-xs-12">
                        <h2>Donate Now</h2>
                        <ol class="breadcrumb">
                            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                            <li>Donate</li>
                        </ol>
                    </div>
                </div> <!-- end row -->
            </div> <!-- end container -->
        </div>
    </div>
</section>
<!-- end page-title -->
<!-- tp-event-area start -->
<div class="tp-donation-page-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="section-title section-title2 text-center">
                    <div class="thumb-text">
                        <span>Donate</span>
                        
                    </div>
                    <h2>Support Our Cause with Your Generosity</h2>
                </div>
                <div id="Donations" class="tab-pane">
                    <form class="contact-validation-active" method="post" asp-action="AddDonation" asp-controller="Home">
                        <div asp-validation-summary="ModelOnly"></div>
                        
                            <div class="tp-donations-amount">
                                <h2>Your Donation</h2>
                                <select class="form-control" asp-for="DAmount" id="donation_amount">
                                    <option selected>Select Amount</option>
                                    <option value="1">$1</option>
                                    <option value="5">$5</option>
                                    <option value="10">$10</option>
                                    <option value="50">$50</option>
                                    <option value="100">$100</option>
                                    <option value="500">$500</option>
                                    <option value="1000">$1000</option>
                                    <option value="5000">$5000</option>
                                    <option value="10000">$10000</option>
                                    <option value="50000">$50000</option>
                                    <option value="100000">$100000</option>
                                    <!-- Add more options as needed -->
                                </select>
                            <span class="error" style="color:#dc3545;font-size:12px;font-weight:600;line-height:4px;margin:1%;" asp-validation-for="DAmount"></span>
                            </div>
                       

                        <div class="tp-donations-amount">
                            <h2>Select Donation Purpose</h2>
                            <select class="form-control" asp-for="DCauseId" asp-items="ViewBag.Cause">
                                
                                <!-- Add more options as needed -->
                            </select>
                        </div>
                        <div class="tp-donations-details">
                            <h2>Details</h2>
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-12 form-group">
                                    <input type="text" class="form-control" asp-for="DFirstname" id="fname"  placeholder="First Name">
                                    <span class="error" style="color:#dc3545;font-size:12px;font-weight:600;line-height:4px;margin:1%;" asp-validation-for="DFirstname"></span>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-12 form-group">
                                    <input type="text" class="form-control" asp-for="DLastname" id="name"  placeholder="Last Name">
                                    <span class="error" style="color:#dc3545;font-size:12px;font-weight:600;line-height:4px;margin:1%;" asp-validation-for="DLastname"></span>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-12 form-group clearfix">
                                    <input type="email" class="form-control" asp-for="DEmail" id="email"  placeholder="Email">
                                    <span class="error" style="color:#dc3545;font-size:12px;font-weight:600;line-height:4px;margin:1%;" asp-validation-for="DEmail"></span>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-12 form-group">
                                    <input type="text" class="form-control" asp-for="DAddress" id="Adress"  placeholder="Adress">
                                    <span class="error" style="color:#dc3545;font-size:12px;font-weight:600;line-height:4px;margin:1%;" asp-validation-for="DAddress"></span>
                                </div>
                                <div class="col-lg-12 col-12 form-group">
                                    <textarea class="form-control" asp-for="DMessage" id="note" placeholder="Message" ></textarea>
                                    <span class="error" style="color:#dc3545;font-size:12px;font-weight:600;line-height:4px;margin:1%;" asp-validation-for="DMessage"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="submit-area">
                            <button type="submit" class="theme-btn submit-btn">Donate Now</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- tp-event-area end -->
