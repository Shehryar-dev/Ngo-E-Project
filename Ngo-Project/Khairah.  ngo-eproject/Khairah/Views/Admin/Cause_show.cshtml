    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper">

            <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
                <div class="page-title">

                    <div class="pull-left">
                        <h1 class="title" style="font-family: Pacifico;color: 	#fffffe;">Khai<span style="color: #26b75e;">rah.</span> CAUSES</h1>
                    </div>

                    <div class="pull-right hidden-xs">
                        <ol class="breadcrumb">
                            <li>
                                <a asp-action="Index" asp-controller="Admin" style="font-family: 'Almendra';color: #fffffe;"><i class="fa fa-home"></i>Home</a>
                            </li>
                            <li>
                                <a asp-action="Cause_show" asp-controller="Admin" style="font-family: 'Almendra';color: #fffffe;">Causes</a>
                            </li>
                            <li class="active" style="font-family: 'Almendra';color: 	#fffffe;">
                                <strong>Show Cause</strong>
                            </li>
                        </ol>
                    </div>

                </div>
            </div>
            <div class="clearfix"></div>


            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">All Cause</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle fa fa-chevron-down"></i>
                            <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                            <i class="box_close fa fa-times"></i>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">



                            <div class="col-lg-12">
                                <section class="box ">
                                    <header class="panel_header">
                                        <!-- <h2 class="title pull-left">Bordered Table</h2> -->
                                        <div class="actions panel_actions pull-right">
                                            <i class="box_toggle fa fa-chevron-down"></i>
                                            <i class="box_setting fa fa-cog" data-toggle="modal"
                                               href="#section-settings"></i>
                                            <i class="box_close fa fa-times"></i>
                                        </div>
                                    </header>
                                    <div class="content-body">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 col-xs-12">
                                                <table class="table table-bordered text-center">
                                                    <thead>
                                                        <tr>
                                                            <th class=" text-center">Cause ID</th>
                                                            <th class=" text-center">Cause Name</th>
                                                            <th class=" text-center">Description</th>
                                                            <th class=" text-center">Cause Type</th>
                                                            <th class=" text-center">Goal Amount</th>
                                                            <th class=" text-center">Rised Amount</th>
                                                            <th class=" text-center">Update</th>
                                                            <th class=" text-center">Delete</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @item.CId
                                                                </td>
                                                                <td>
                                                                    @item.CName
                                                                </td>
                                                                <td>
                                                                    @item.CDesc
                                                                </td>
                                                                <td>
                                                                    @item.CauseType.CTypeName
                                                                </td>
                                                                <td>
                                                                    $@item.CGoalAmount
                                                                </td>
                                                                <td>
                                                                    $@(item.CRaisedAmount == null ? "$0" : item.CRaisedAmount.ToString())
                                                                </td>
                                                                
                                                                <td>
                                                                    <a asp-route-id="@item.CId" asp-controller="Admin" asp-action="Cause_edit"
                                                                       class="btn btn-success">
                                                                        <i class="fa fa-pencil"></i>
                                                                    </a>
                                                                </td>
                                                                <td>
                                                                    <a asp-route-id="@item.CId" asp-action="cause_del" asp-controller="Admin" class="btn btn-danger">
                                                                        <i class="fa-regular fa-trash-can"></i>
                                                                    </a>

                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>

                            <div class="col-md-12 col-sm-12 col-xs-12 h-100">
                                <div class="row" style="margin:auto;">
                                   
                                  
                                    
                                    <div class="case-area section-padding">
                                        <div class="container" style="margin:auto;">
                                          
                                            <div class="row m-auto" style="width:90%;margin:auto;">
                                                @foreach (var item in Model)
                                                {
                                                    <div class="col-lg-5 col-md-6 col-sm-6 col-12 " style="margin-right:4%;">
                                                        <div class="cause-item">
                                                            <div class="cause-top">
                                                                <div class="cause-img">
                                                                    <img src="~/Contentimages/cause/@item.CImage" alt="">

                                                                </div>
                                                            </div>
                                                            <div class="cause-text">
                                                                <ul>
                                                                    <li><a href="#">GOAL : $@item.CGoalAmount</a></li>
                                                                    <li><a href="#">RISED : $@item.CRaisedAmount</a></li>
                                                                </ul>
                                                                <h3><a asp-action="cause" asp-controller="Home">@item.CName</a></h3>
                                                                <p>@item.CDesc</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                               
                                              
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </section>
            </div>

        </section>
    </section>
    <!-- END CONTENT -->
