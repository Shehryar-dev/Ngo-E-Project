    <section id="main-content">
        <section class="wrapper main-wrapper">

            <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
                <div class="page-title">

                    <div class="pull-left">
                        <h1 class="title" style="font-family: Pacifico;color: 	#fffffe;">Khai<span style="color: #26b75e;">rah.</span> Volunteers</h1>
                    </div>

                    <div class="pull-right hidden-xs">
                        <ol class="breadcrumb">
                            <li>
                                <a asp-action="Index" asp-controller="Admin" style="font-family: 'Almendra';color: #fffffe;"><i class="fa fa-home"></i>Home</a>
                            </li>
                            <li>
                                <a asp-action="vol_records" asp-controller="Admin" style="font-family: 'Almendra';color: #fffffe;">Volunteer</a>
                            </li>
                            <li class="active" style="font-family: 'Almendra';color: 	#fffffe;">
                                <strong>Volunteers Record</strong>
                            </li>
                        </ol>
                    </div>

                </div>
            </div>
            <div class="clearfix"></div>

            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Volunteer Request</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle fa fa-chevron-down"></i>
                            <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                            <i class="box_close fa fa-times"></i>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <table class="table table-bordered text-center">
                                    <thead>
                                        <tr>
                                            <th class=" text-center">Volunteer Id</th>
                                            <th class=" text-center">Name</th>
                                            <th class=" text-center">Email</th>
                                            <th class=" text-center">Phone Number</th>
                                            <th class=" text-center">Resume</th>
                                            <th class=" text-center">Message</th>
                                            <th class=" text-center">Request Date</th>
                                            <th class=" text-center">Record Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>

                                                <td>
                                                    @item.VId
                                                </td>
                                                <td>
                                                    @item.VName
                                                </td>
                                                <td>
                                                    @item.VEmail
                                                </td>
                                                <td>
                                                    @item.VContNum
                                                </td>
                                                <td>
                                                    <a href="~/adminpanel/data/public_resume/@item.VResume" download="@item.VResume">Resume</a>
                                                </td>
                                                <td>
                                                    @item.VMessage
                                                </td>
                                                <td>
                                                    @item.VApplyDate
                                                </td>
                                                <td>
                                                    <a asp-route-id="@item.VId" asp-action="vol_del" asp-controller="Admin" class="btn btn-danger">
                                                        <i class="fa-regular fa-trash-can"></i>
                                                    </a>
                                                </td>

                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-12 col-sm-12 col-xs-12">

                                <!-- start -->

                                <div class="timeline2-centered">
                                    @foreach (var item in Model)
                                    {
                                        <article class="timeline2-entry">

                                            <div class="timeline2-entry-inner">

                                                <div class="timeline2-icon bg-success">
                                                    <i class="fa-solid fa-envelope"></i>
                                                </div>

                                                <div class="timeline2-label">
                                                    <h2>
                                                        <a href="#"><strong>@item.VName</strong></a> <span>
                                                            @item.VApplyDate
                                                        </span>
                                                    </h2>
                                                    <p>@item.VMessage</p>
                                                </div>
                                            </div>

                                        </article>
                                    }



                                </div>
                                <!-- end -->
                            </div>
                        </div>
                    </div>
                </section>
            </div>



