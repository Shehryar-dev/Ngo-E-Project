                                <strong>Show Donations</strong>
                            </li>
                        </ol>
                    </div>

                </div>
            </div>
            <div class="clearfix"></div>

            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Total Donations</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle fa fa-chevron-down"></i>
                            <i class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></i>
                            <i class="box_close fa fa-times"></i>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">



                            <div class="col-lg-12">
                                <section class="box ">
                                    <header class="panel_header">
                                        <!-- <h2 class="title pull-left">Bordered Table</h2> -->
                                        <div class="actions panel_actions pull-right">
                                            <i class="box_toggle fa fa-chevron-down"></i>
                                            <i class="box_setting fa fa-cog" data-toggle="modal"
                                               href="#section-settings"></i>
                                            <i class="box_close fa fa-times"></i>
                                        </div>
                                    </header>
                                    <div class="content-body">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-12 col-xs-12">
                                                <table class="table table-bordered text-center">
                                                    <thead>
                                                        <tr>
                                                             <th class="text-center">Donation ID</th>
                                                             <th class="text-center">Cause</th>
                                                             <th class="text-center">Amount</th>
                                                             <th class="text-center">User Name</th>
                                                             <th class="text-center">Email</th>
                                                             <th class="text-center">Address</th>
                                                             <th class="text-center">Message</th>
                                                             <th class="text-center">Date</th> 
                                                        </tr>

                                                       
                                                    </thead>
                                                    <tbody>
                                                        @foreach(var item in Model)
                                                        {
                                                    <tr>
                                                        <td>@item.DId</td>
                                                        <td>@item.DCause.CName</td>
                                                        <td>$@item.DAmount</td>
                                                        <td>@item.DFirstname @item.DLastname</td>
                                                        <td>@item.DEmail</td>
                                                        <td>@item.DAddress</td>
                                                        <td>@item.DMessage</td>
                                                        <td>@item.DDate</td>

                                                     </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="row">

                                            <div class="col-md-12 col-sm-12 col-xs-12">

                                                <!-- start -->

                                                <div class="timeline2-centered">
                                                    @foreach (var item in Model)
                                                    {
                                                        <article class="timeline2-entry">
                                                            <div class="timeline2-entry-inner" style="font-family: 'Almendra';">
                                                                <div class="timeline2-icon bg-success">
                                                                    <abbr style="border:none;" title="Donation ID: @item.DId"><i class="fa-solid fa-envelope"></i></abbr>
                                                                </div>
                                                                <div class="timeline2-label">
                                                                    <h2>
                                                                        <a style="font-family: 'Almendra';"><strong>@item.DFirstname @item.DLastname</strong></a>
                                                                        <span style="font-family: 'Almendra';">@item.DEmail</span> 
                                                                        <span style="font-family: Pacifico;">@item.DDate.Value.ToString("dd MMM yyyy")</span>
                                                                </h2>
                                                                    <p style="font-family: Pacifico;">Donation Amount: $@item.DAmount</p>
                                                                    <p>@item.DMessage</p>
                                                                    <p>Thank you for your message! We appreciate your support.</p>
                                                                </div>
                                                            </div>
                                                        </article>


                                                    }

                                                </div>
                                                <!-- end -->
                                            </div>
                                        </div>
                                    </div>
                                        <div class="row">
                                    @if (Model != null)
                                    {
                                        int totalDonations = Model.Count(); // Get the total number of donations

                                            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                                <div class="tile-counter bg-primary" style="font-family: Pacifico;">
                                                    <div class="content">
                                                        <i class='fa fa-line-chart icon-lg'></i>
                                                        <h2 style="font-family: Pacifico;" class="number_counter" data-speed="3000" data-from="1" data-to="@totalDonations">@totalDonations</h2>
                                                        <div class="clearfix"></div>
                                                        <span style="font-family: Pacifico;">Supporters Visited</span>
                                                    </div>
                                                </div>
                                            </div>
                                    }

                                        @if (Model != null)
                                        {
                                            decimal totalDonationAmount = Model.Sum(d => d.DAmount ?? 0); // Get the total donation amount

                                            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                                <div class="tile-counter bg-info" style="font-family: Pacifico;">
                                                        <div class="content">
                                                        <i class='fa fa-dollar icon-lg'></i>
                                                        <h2 style="font-family: Pacifico;" class="number_counter" data-speed="3000" data-from="1" data-to="@totalDonationAmount">$@totalDonationAmount</h2>
                                                            <div class="clearfix"></div>
                                                        <span style="font-family: Pacifico;">Total Donation Amount</span>
                                                        </div>
                                                    </div>
                                                </div>
                                           
                                        }


                                        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                                            <div class="tile-counter bg-purple" style="font-family: Pacifico;">
                                                <div class="content">
                                                    <i class='fa fa-thumbs-up  icon-lg'></i>
                                                    <h2 style="font-family: Pacifico;" class="number_counter" data-speed="3000" data-from="1001" data-to="3304">1001</h2>
                                                    <div class="clearfix"></div>
                                                    <span style="font-family: Pacifico;">Likes and Support</span>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </section>
                            </div>

                           

                        </div>
                    </div>

                </section>
            </div>
            


        </section>
    </section>


